<html>     
     <head>
        <title>
            <%= locals.title %>
      </title>
      <script src="https://kit.fontawesome.com/260497237c.js" crossorigin="anonymous"></script>
      <!-- our css file should be below all other
    style so that we can override it -->
      <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <div class="container"> 
            <h1 id="page-heading">
                <i class="fas fa-address-book"></i>
                My Contact List</h1>
            <div id="contacts-list-container">
                <ul class="align-center">
                    <% for(let i of contact_list) {%>
                      <li class="contact">
                          <div class="details">
                          <p><%= i.name %></p>
                          <p><%= i.phone %></p>

                      </div>
                      <div class="delete-button">
                          <!-- <a href="/delete-contact/?phone=<%= i.phone %>"> -->

                            <!-- deleting from database using id -->
                            <a href="/delete-contact/?id=<%= i._id %>">
                              <i class="fas fa-trash-alt"></i>
                          </a>

                      </div>
                      </li>

                        <%}%>
                </ul>

            </div> 
            <form id="new-contact-form" action="/create-contact" method="post">
                <input type="text" name="name" placeholder="Enter Name" required>
                <input type="number" name="phone" placeholder="Enter Phone" required>
                <button id="add" type="submit">Add</button>
            </form>
        </div>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>